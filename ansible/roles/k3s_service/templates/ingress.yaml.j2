apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: "{{ k3s_service_name }}-ingress"
  namespace: "{{ k3s_service_namespace }}"
spec:
  rules:
  - host: "{{ k3s_service_name }}.staging.home"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: "{{ k3s_service_name }}-service"
            port:
              number: 80
