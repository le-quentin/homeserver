apiVersion: apps/v1
kind: Deployment
metadata:
  name: "{{ k3s_service_name }}"
  namespace: "{{ k3s_service_namespace }}"
spec:
  selector:
    matchLabels:
      name: "{{ k3s_service_name }}"
  replicas: 1 
  template: 
    metadata:
      labels:
        name: "{{ k3s_service_name }}"
    spec:

{#################### containers ####################}
      containers:

        - name: "{{ k3s_service_name }}"
          image: "{{ k3s_service_image }}"
          ports:
            - containerPort: {{ k3s_service_container_port }}
          volumeMounts:
{% for volume in data_volumes %}
            - name:  "volume-{{ volume.name }}"
              mountPath: "{{ volume.mount_path }}"
{% endfor %}
{% for file in config_map_files | selectattr('init_only', 'equalto', false) %}
            - name:  "volume-configuration"
              mountPath: "{{ file.mount_path }}"
              subPath: "{{ file.name }}"
{% endfor %}

{#################### Volumes ####################}
      volumes:
{% for volume in data_volumes %}
      - name: "volume-{{ volume.name }}"
        persistentVolumeClaim:
          claimName: "{{ volume.name }}"
{% if volume.type == 'sqlite' %}
      - name: "volume-nfs-sync-{{ volume.name }}"
        persistentVolumeClaim:
          claimName: "synced-{{ volume.name }}"
{% endif %}
{% endfor %}
{% if config_map_enabled %}
      - name: "volume-configuration"
        configMap:
          name: "{{ k3s_service_name }}-config-files"
{% endif %}

{#################### Init containers ####################}
{% if config_map_files | selectattr('init_only', 'equalto', true) | length>0 %}
      initContainers:
      - name: "{{ k3s_service_name }}-init"
        image: busybox
        command:
{% set commands = [] %}
{% for file in config_map_files | selectattr('init_only', 'equalto', true) %}
  {{ commands.append("cp -n '/tmp"~(file.mount_path)~"' '"~file.mount_path~"'") }}
{% endfor %}
        - "sh"
        - "-c"
        - "{{ commands | join(';') }}"
        volumeMounts:
{% for volume in data_volumes %}
        - name:  "volume-{{ volume.name }}"
          mountPath: "{{ volume.mount_path }}"
{% endfor %}
{% for file in config_map_files | selectattr('init_only', 'equalto', true) %}
        - name:  "volume-configuration"
          mountPath: "/tmp{{ file.mount_path }}"
          subPath: "{{ file.name }}"
{% endfor %}
{% endif %}
