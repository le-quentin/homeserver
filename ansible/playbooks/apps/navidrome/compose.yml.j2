services:
  navidrome:
    image: deluan/navidrome:0.57.0
    user: 1000:1000
    environment:
      - ND_ARTISTARTPRIORITY=folder.*,artist.*,album/artist.*,external
      - ND_MUSICFOLDER=/music/library
      - ND_SCANNER_SCHEDULE=10 10 * * * # Full library scan every day at 10:10
      - ND_SCANNER_PURGEMISSING=full # Purge missing tracks from DB on full scans only
    volumes:
      - navidrome-data:/data
      - /mnt/media/Musique:/music:ro
volumes:
  navidrome-data:
    external: true
