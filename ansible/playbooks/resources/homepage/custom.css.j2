/* Fix layout: vertical stacking of groups */
#services.vertical-stack {
  display: block !important;
}

.apps-root h2 {
  font-size: 1.5rem;
}

/* Group margins */
.services-group {
  margin-bottom: 2.5rem;
}

/* Applications layout */
.apps-root .services-list {
  display: grid;
  gap: 1.2rem;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

/* Subgroup layout: compact */
.admin-subgroup {
  margin-top: 0.5rem;
  margin-bottom: 1.2rem;
}

.admin-subgroup h2 {
  font-size: 1rem;
  margin-bottom: 0.5rem;
  color: #ccc;
}

.admin-subgroup .services-list {
  display: grid;
  gap: 1.2rem;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

/* Card styles */
.user-app {
  background-color: rgba(255, 255, 255, 0.07);
  border-radius: 0.5rem;
  padding: 0.75rem;
  transition: background 0.2s ease, transform 0.2s ease;
}
.user-app:hover {
  background-color: rgba(255, 255, 255, 0.15);
  transform: translateY(-2px);
}

.admin-app {
  background-color: rgba(255, 255, 255, 0.03);
  opacity: 0.8;
  border-radius: 0.5rem;
  padding: 0.5rem;
  transition: background 0.2s ease;
}
.admin-app:hover {
  background-color: rgba(255, 255, 255, 0.08);
  opacity: 1;
}

/* Collapsed wrapper */
.admin-wrapper.collapsed {
  display: none;
}

/* Toggle icon inside h2 */
.admin-root h2 {
  margin-top: 5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 1.15rem;
  color: #ccc;
  cursor: pointer;
}

/* Arrow toggle */
.collapse-toggle {
  font-size: 1.25rem;
  padding: 0 0.25rem;
  user-select: none;
}

.admin-root h2:hover {
  color: white;
}

