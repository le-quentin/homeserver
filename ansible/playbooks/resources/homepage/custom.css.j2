/* ✅ Make the services container stack groups vertically */
#services {
  display: block !important;  /* override homepage's flexbox */
}

/* ✅ Each group stacks below the last */
.services-group {
  margin-bottom: 3rem;
}

/* ✅ Make cards inside each group a horizontal responsive grid */
.services-list {
  display: grid;
  gap: 1rem;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
}

/* ✅ Headings */
.services-group h2 {
  font-size: 1.5rem;
  font-weight: bold;
  margin: 1rem 0 1rem;
  color: white;
}

/* ✅ Admin group titles dimmed */
.services-group h2.admin-heading {
  color: #bbb;
}

/* ✅ User app cards */
.service-card.user-app {
  background-color: rgba(255, 255, 255, 0.06);
  border-radius: 0.5rem;
  transition: background 0.2s ease, transform 0.2s ease;
}
.service-card.user-app:hover {
  background-color: rgba(255, 255, 255, 0.15);
  transform: translateY(-2px);
}

/* ✅ Admin app cards */
.service-card.admin-app {
  background-color: rgba(255, 255, 255, 0.02);
  opacity: 0.75;
  border-radius: 0.5rem;
  transition: background 0.2s ease, opacity 0.2s ease;
}
.service-card.admin-app:hover {
  background-color: rgba(255, 255, 255, 0.08);
  opacity: 1;
}

/* Consistent height */
.service-card {
  min-height: 100px;
}

