services:
  homepage:
    image: ghcr.io/gethomepage/homepage:v1.3.2
    container_name: homepage
    environment:
      HOMEPAGE_ALLOWED_HOSTS: homepage.home # required, may need port. See gethomepage.dev/installation/#homepage_allowed_hosts
      # PUID: 1000 # optional, your user id
      # PGID: 1000 # optional, your group id
    volumes:
      - {{ homelab_app_target_root_dir }}/config:/app/config # Make sure your local config directory exists
      - /var/run/docker.sock:/var/run/docker.sock:ro # optional, for docker integrations
