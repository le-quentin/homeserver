---
services:
  sonarr:
    image: lscr.io/linuxserver/sonarr:4.0.15
    container_name: sonarr
    networks:
      - servarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - sonarr-config:/config
      - /mnt/media/downloads:/downloads #optional
      - /mnt/media/Vidéo/Séries:/shows #optional
volumes:
  sonarr-config:
    external: true
networks:
  servarr:
    external: true
