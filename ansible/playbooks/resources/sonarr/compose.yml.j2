---
services:
  sonarr:
    image: lscr.io/linuxserver/sonarr:4.0.15
    container_name: sonarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - sonarr-config:/config
      - {{ homelab_app_target_root_dir }}/downloads:/downloads #optional
      - /mnt/media/Vidéo/Séries:/shows #optional
volumes:
  sonarr-config:
    external: true
