---
services:
  bazarr:
    image: linuxserver/bazarr:1.5.2
    container_name: bazarr
    networks:
      - servarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - bazarr-config:/config
      - /downloads-subtitles:/downloads 
      - /mnt/media/Vidéo/Séries:/shows 
      - /mnt/media/Vidéo/Films:/library/films
      - /mnt/media/Vidéo/Sketchs:/library/spectacles
volumes:
  bazarr-config:
    external: true
networks:
  servarr:
    external: true
